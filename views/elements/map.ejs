<link rel="stylesheet" href="/listings/map.css" />
<div
	class="modal fade"
	id="mapModal"
	tabindex="-1"
	aria-labelledby="mapModalLabel"
	aria-hidden="true"
>
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h2 class="modal-title fs-5 ms-3" id="exampleModalLabel">
					Location of the Package
				</h2>
			</div>
			<div class="modal-body row align-items-center">
				<div class="col-11 col-sm-12 tab-border special-tab-border">
					<h4>Where you'll be</h4>
					<div
						id="map"
						class="package-item col"
						data-package="<%= JSON.stringify(package) %>"
					></div>
				</div>
			</div>
			<div class="modal-footer">
				<button
					type="button"
					class="btn btn-outline-dark"
					data-bs-dismiss="modal"
				>
					Close
				</button>
			</div>
		</div>
	</div>
</div>

